<div class="container">
  <%= render 'shared/errors', obj: @article %>
  <%= form_with(model: @article, class: "shadow p-3 mb-5 bg-light rounded", local: true) do |f| %>
    <div class="row justify-content-center" >
      <div class="col-10">
        <div class="form-group row">
            <%= f.label :title %><br/>
            <%= f.text_field :title, class: "form-control shadow-sm rounded" %>
        </div>

        <div class="form-group row">
            <%= f.label :description %><br/>
            <%= f.text_area :description, rows: 10, class: "form-control shadow-sm rounded" %>
        </div>

        <div class="form-group row">
            <%= f.label :category %><br/>
            <%= f.collection_select(:category_ids, Category.all, :id, :name, 
            { prompt: "Make your selection (can't be empty)"}, { multiple: true, size: 3, class: "custom-select shadow-sm rounded" }) %>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-success" %>
        </div>
        </div>
    </div>
  <% end %>

  <div class="row justify-content-center mb-3">
    <%= link_to 'Article list', articles_path %>
  </div>
</div>
