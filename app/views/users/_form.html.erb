<div class="container">
  <%= render 'shared/errors', obj: @user %>
  <%= form_with(model: @user, class: "shadow p-3 mb-5 bg-light rounded", local: true) do |f| %>
    <div class="row justify-content-center" >
      <div class="col-10">
        <div class="form-group row">
            <%= f.label :username %><br/>
            <%= f.text_field :username, class: "form-control shadow-sm rounded", placeholder: "Enter a username" %>
        </div>

        <div class="form-group row">
            <%= f.label :email %><br/>
            <%= f.email_field :email, class: "form-control shadow-sm rounded", placeholder: "Enter your email address" %>
        </div>

        <div class="form-group row">
            <%= f.label :password %><br/>
            <%= f.password_field :password, class: "form-control shadow-sm rounded", placeholder: "Choose a password" %>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit "Sign up" , class: "btn btn-outline-success" %>
        </div>
        </div>
    </div>
  <% end %>

  <div class="row justify-content-center mb-3">
    <%= link_to 'Article list', articles_path %>
  </div>
</div>