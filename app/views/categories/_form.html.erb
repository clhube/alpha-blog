<%= render 'shared/errors', obj: @category %>
  <%= form_with(model: @category, class: "shadow p-3 mb-5 bg-light rounded", local: true) do |f| %>
    <div class="row justify-content-center" >
      <div class="col-10">
        <div class="form-group row">
            <%= f.label :name, "Category name" %><br/>
            <%= f.text_field :name, class: "form-control shadow-sm rounded", placeholder: "Enter a name" %>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-success" %>
        </div>
      </div>
    </div>
  <% end %>